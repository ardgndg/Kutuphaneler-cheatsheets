"""
import matplotlib.pyplot as plt
gruplar = ["A","B","C"] # gruplar listesi oluşturduk    
veriler = [15,45,40] # veriler listesi oluşturduk
plt.figure(figsize=(9,3)) 
plt.subplot(131)
plt.bar(gruplar,veriler)
plt.subplot(132)
plt.plot(gruplar,veriler)
plt.show()
"""
"""
import matplotlib.pyplot as plt
import numpy as np
x = np.linspace(0,5,100) #linspace fonksiyonu ile 0 dan 5 e kadar 100 adet sayı üretiyoruz
plt.plot(x,x,label="linear") #linear olarak etiketli çizgi grafiği çiziyoruz
plt.plot(x,x**2,label="quadratic") #quadratic olarak etiketli çizgi grafiği çiziyoruz
plt.plot(x,x**3,label="cubic") #cubic olarak etiketli çizgi grafiği çiziyoruz
plt.xlabel("x label") #x eksenine isim veriyoruz
plt.ylabel("y label") #y eksenine isim veriyoruz
plt.title("Simple Plot") #grafik başlığı oluşturuyoruz
plt.legend() #etiketleri gösteriyoruz
plt.show() #grafikleri gösteriyoruz
#Numpy ve matplotlib ile grafik çizimi
"""
