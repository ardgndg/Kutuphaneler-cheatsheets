import matplotlib.pyplot as plt
gruplar = ["A","B","C"] # gruplar listesi oluşturduk    
veriler = [15,45,40] # veriler listesi oluşturduk
plt.figure(figsize=(9,3)) #figure fonksiyonu ile grafik boyutunu ayarlıyoruz
plt.subplot(131) #subplot fonksiyonu ile grafiklerin yerleşimini ayarlıyoruz
plt.bar(gruplar,veriler) #bar fonksiyonu ile grafik çizdiriyoruz
plt.subplot(133) #subplot fonksiyonu ile grafiklerin yerleşimini ayarlıyoruz
plt.scatter(gruplar,veriler) #scatter fonksiyonu ile nokta grafiği çiziyoruz
plt.subplot(132) #subplot fonksiyonu ile grafiklerin yerleşimini ayarlıyoruz
plt.plot(gruplar,veriler) #plot fonksiyonu ile çizgi grafiği çiziyoruz
plt.suptitle("Kategoriler") #suptitle fonksiyonu ile grafik başlığı oluşturuyoruz
plt.show() #show fonksiyonu ile grafikleri gösteriyoruz
#Numpy ve matplotlib ile grafik çizimi
